#include <stdio.h>
#include <cs50.h>
#include <stdbool.h>

int main(void)
{
    float x = get_float("Give float 1: ");
    float y = get_float("Give float 2: ");
    float z = get_float("Give float 3: ");
    
    //function declaration
    bool i = triangle(x, y, z);
    if (i == true)
    {
        printf("true/n");
    }
    else
    {
       printf("false/n"); 
    }

    // function definition  
    bool triangle(float a, float b, float c)
    {
        if(a <= 0 || b <= 0 || c <= 0)
        {
            return false;
        }
        
        if((a + b < c) || (b + c < a) || (a + c < b))
        {
           return false; 
        }
        else
        {
            return true;
        }   
    }

}
